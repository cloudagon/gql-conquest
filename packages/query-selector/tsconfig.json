{
  "compilerOptions": {                
    "target": "es5",                              
    "module": "commonjs",
    "baseUrl": "src",
    "strict": true,                          
    "noImplicitAny": true,       
    "esModuleInterop": true,    
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": ["node_modules", "dist"]
}
